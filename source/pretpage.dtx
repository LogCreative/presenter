\dim_new:N \l_@@_headline_height_dim
\tl_new:N \l_@@_headline_bg_fill_tl
\DeclareTemplateCode { headline-bg } { fill } { 0 }
  {
    fill = \l_@@_headline_bg_fill_tl
  }
  {
    \AssignTemplateKeys
    \dim_set_eq:NN \l_@@_headline_height_dim
      { \dim_eval:n { 1 in + \voffset + \topmargin + \headheight + \headsep / 2 } }
%<*fill>
    \exp_args:NV \color_select:n \l_@@_headline_bg_fill_tl
    \linethickness { \dim_use:N \l_@@_headline_height_dim }
    \put (0, \dim_eval:n { - \l_@@_headline_height_dim / 2 } )
      { \line ( 1 , 0 ) { \paperwidth } }
%</fill>
%<*fill-l3draw>
    \put ( 0, - \dim_use:N \l_@@_headline_height_dim )
      {
        \draw_begin:
          \draw_path_rectangle:nn
            { 0pt, 0pt }
            { \paperwidth, \l_@@_headline_height_dim }
          \exp_args:NV \color_fill:n \l_@@_headline_bg_fill_tl
          \draw_path_use_clear:n { fill }
        \draw_end:
      }
%</fill-l3draw>
  }
